<% include partials/header %>

<h1>Edit User:</h1>
<% if(errors != undefined){ %>
<ul>
<% errors.forEach(function(error){ %>
<li style="color:red"><%= error.msg %></li>
<% }) %>
</ul>
<% } %>

<form method="POST" action="/blogs/edit/<%= blog. _id %>">
<input type="hidden" name="_method" value="PUT" />
<label>Title:</label><br>
<input type="text" name="title" value="<%= blog.title %>"><br>
<label>Slug:</label><br>
<input type="text" name="slug" value="<%= blog.slug %>"><br>
<br>
<label>Author:</label><br>
<input type="text" name="author" value="<%= blog.author %>"><br>
<br>
<label>Comments:</label><br>
<input type="text" name="comments" value="<%= blog.comments.comment %>"><br>
<br>
<label>Category:</label><br>
<input type="text" name="category" value="<%= blog.category %>"><br>
<br>

<input type="submit" value="Edit">
</form>

<% include partials/footer %>
