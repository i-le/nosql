<% include partials/header %>

<h1>Add Blog:</h1>
<% if(errors != undefined){ %>
<ul>
<% errors.forEach(function(error){ %>
<li style="color:red"><%= error.msg %></li>
<% }) %>
</ul>
<% } %>

<form method="POST" action="/blogs/add">
<label>Title:</label><br>
<input type="text" name="title"><br>
<label>Slug:</label><br>
<input type="text" name="slug"><br>
<label>Author:</label><br>
<input type="text" name="author"><br>
<label>Body:</label><br>
<input type="text" name="body"><br>
<label>Comment:</label><br>
<input type="text" name="comment"><br>
<label>Category:</label><br>
<input type="text" name="category"><br>
<br>
<input type="submit" value="Submit">
</form>

<h1>Blogs:</h1>

<ol>
<% blogs.forEach(function(blog){ %>
<li style="border: inset 1px solid black;background-color:lightblue;">
    <h1><%= blog.title %></h1>
    <i>&nbsp;&nbsp;&nbsp;&nbsp;by <%= blog.author %></i>
    <p>&nbsp;&nbsp;&nbsp;&nbsp;<%= blog.body %></p>


    <p><b>Comments</b></p>
    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= blog.comments.comment %></p>


    <p><b>Category</b></p>
    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= blog.category %></p>
    
    
    
<div>
<br>
<a href='/blogs/edit/<%= blog._id %>'>Edit</a>

</div>
<div>
<br>
<form method="post" action="/blogs/delete/<%= blog._id %>"><input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" /><input type="hidden" name="_method" value="DELETE" /></form>
<% }) %>

</div>
</ol>

<% include partials/footer %>